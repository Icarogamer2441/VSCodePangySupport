{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*\\{[^}\"']*$",
        "decreaseIndentPattern": "^\\s*\\}"
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "onEnterRules": [
        {
            "beforeText": "^\\s*def\\s+\\w+.*\\(.*\\)\\s*->\\s*\\w+(\\[\\])*\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*class\\s+\\w+\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*if\\s*\\(.*\\)\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*else\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*loop\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*macro\\s+\\w+\\(.*\\)\\s*$",
            "action": { "indent": "indent" }
        }
    ]
} 